<section>

    <div class="row" style="border-width: 8px; border-style: dotted; border-color: #faebeb; ">
        <div class="title">
            <h2 class="card-title" style="text-align:center"><strong>La partie commentaire</strong></h2> <br /><br />
        </div>
        <br />
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <img class="img-fluid, center-block" width="450" src="https://i.pinimg.com/originals/c2/c6/4b/c2c64b930af48a341c3adef7c659d36e.png">
                </div>
                <br />
            </div>
        </div>
        <br /> <br /> 
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3><strong> Que pensez-vous du restaurant ?</strong></h3><br />
                    <div class="card-text" style="text-align:center">
                        <input type="text" class="datepicker-here form-control" data-language="en" id="dp" data-date-format="dd M yyyy">
                    </div>
                    <div style="padding: 20px 0;">
                        <button class="btn btn-default">@Html.ActionLink("Commenter", "Create", "COMMENTAIREs")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center" style="text-align:center; padding: 50px 0;">
        <button class="btn btn-default">@Html.ActionLink("Reserver", "Page", "RESERVATIONs")</button> &nbsp; &nbsp; &nbsp; &nbsp;
        <button class="btn btn-default">@Html.ActionLink("Liste des restaurant", "Page", "Home")</button>
    </div>
</section>
